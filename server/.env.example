###############################
# Square / Server Environment #
###############################
# Copy this file to .env and fill values. Keep .env out of version control.

# Required Square credentials (start with a Sandbox token & location)
SQUARE_ACCESS_TOKEN=REPLACE_WITH_SANDBOX_OR_PROD_TOKEN
SQUARE_LOCATION_ID=REPLACE_WITH_LOCATION_ID

# API base: sandbox or production (comment out to use default)
SQUARE_API_BASE=https://connect.squareupsandbox.com

# Comma-separated origin allowlist for CORS (no spaces unless part of URL)
CORS_ALLOW_ORIGINS=http://localhost:5173,https://your-production-domain

# Enable dev-only endpoint POST /api/_reload to refresh price & map indices without restarting
ENABLE_RELOAD=false

# Public site base (for future callbacks / redirects if needed)
SITE_BASE_URL=http://localhost:5173
